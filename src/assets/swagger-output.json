    "/pharmacy/create": {
      "post": {
        "tags": [
          "Pharmacy"
        ],
        "description": "Endpoint para criar uma farmácia.",
        "parameters": [
          {
            "name": "Pharmacy",
            "in": "body",
            "description": "Pharmacy information.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
